  .b-header__top-line
    .b-header__container
      .b-header__content
        .b-header__desc
          .b-site-description{'itemprop': 'description'}
            Магазин мебели ручной работы
            %a{href: 'tel:1123'}
              ="+7 903 595 1737"
        .b-header__search
          .b-search(ks-search)
            %form
              %input.b-search__field{type: 'text', placeholder: 'Поиск'}
              %button.b-search__submit{type: 'submit'}
  
